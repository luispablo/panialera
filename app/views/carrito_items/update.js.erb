
	// Actualizar el precio total de la línea.
	$('<%= "#precio_total_#{@carrito_item.id}" %>').html("<%= number_to_currency(@carrito_item.precio_total) %>");
	$('<%= "#precio_total_#{@carrito_item.id}" %>').css({'background-color':'#d5ed7d'}).animate({'background-color':'#ecdeb3'}, 2000);

	// Actualizar el precio total del carrito.
	$('#precio_total').html("<%= number_to_currency(@carrito_item.carrito.precio_total) %>");
	$('#precio_total').css({'background-color':'#d5ed7d'}).animate({'background-color':'#3D2711'}, 2000);
	
	// Actualizar el costo de envío.
	$('#costo_envio').html("<%= number_to_currency(@carrito_item.carrito.costo_envio) %>");
	$('#costo_envio').css({'background-color':'#d5ed7d'}).animate({'background-color':'#ecdeb3'}, 2000);
	