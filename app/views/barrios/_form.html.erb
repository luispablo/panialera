
	<%= form_for(@barrio, :html => {:class => 'form-horizontal'}) do |f| %>
  		<% if @barrio.errors.any? %>
  			<div class="row">
  				<div class="span6 offset3">
					<% @barrio.errors.full_messages.each do |msg| %>
						<span class="label label-important"><%= msg %></span><br/>
					<% end %>
  				</div>
  			</div>
			<br/>
  		<% end %>

  		<div class="control-group">
    		<%= f.label :nombre, :class => 'control-label' %>
    		<div class="controls"><%= f.text_field :nombre %></div>
  		</div>
  		
  		<div class="form-actions">
    		<%= f.submit 'Grabar', :class => 'btn btn-primary' %>
  		</div>
	<% end %>
