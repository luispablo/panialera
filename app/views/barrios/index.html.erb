
	<legend>Listando barrios</legend>

	<table class="table table-bordered table-stripped">
		<thead>
 			<tr>
    			<th>Nombre</th>
    			<th colspan="3"></th>
  			</tr>
		</thead>
		<tbody>
			<% @barrios.each do |barrio| %>
				<tr>
				    <td><%= barrio.nombre %></td>
				    <td><%= link_to 'Ver', barrio %></td>
				    <td><%= link_to 'Editar', edit_barrio_path(barrio) %></td>
				    <td><%= link_to 'Destruir', barrio, confirm: 'Are you sure?', method: :delete %></td>
			  	</tr>
			<% end %>
		</tbody>
	</table>

	<div class="form-actions">
		<%= link_to 'Nuevo Barrio', new_barrio_path, :class => 'btn btn-primary' %>
	</div>
