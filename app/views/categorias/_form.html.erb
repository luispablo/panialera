<%= form_for(@categoria, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @categoria.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@categoria.errors.count, "error") %> prohibited this categoria from being saved:</h2>

      <ul>
      <% @categoria.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :codigo, :class => 'control-label' %>
    <div class="controls"><%= f.text_field :codigo %></div>
  </div>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls"><%= f.text_field :nombre %></div>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls"><%= f.text_field :descripcion %></div>
  </div>
  <div class="control-group">
    <%= f.label :categoria, :class => 'control-label' %>
    <div class="controls"><%= collection_select(:categoria, :categoria_id, Categoria.all, :id, :nombre, :prompt => true )%></div>
  </div>
  
  <div class="form-actions">
    <%= f.submit 'Grabar', :class => 'btn btn-primary' %>
  </div>
<% end %>
