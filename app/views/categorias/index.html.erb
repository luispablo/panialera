<legend>Categor&iacute;as</legend>

<table class="table table-stripped table-bordered">
	<thead>
		<tr>
			<th>Orden</th>
		    <th>C&oacute;digo</th>
		    <th>Nombre</th>
		    <th>Descripci&oacute;n</th>
		    <th>Categor&iacute;a madre</th>
		    <th>Publicada</th>
		    <th colspan="3">&nbsp;</th>
  		</tr>
	</thead>
	<tbody>
<% @categorias.each do |categoria| %>
  <tr>
	<td><%= best_in_place categoria, :orden %></td>
    <td><%= categoria.codigo %></td>
    <td><%= categoria.nombre %></td>
    <td><%= categoria.descripcion %></td>
    <td><%= categoria.categoria.nombre unless categoria.categoria.nil? %></td>
  	<td><%= best_in_place categoria, :publicado, type: :checkbox, collection: ['<i class="icon-remove"></i>'.html_safe, '<i class="icon-ok"></i>'.html_safe] %></td>
    <td><%= link_to 'Ver', categoria %></td>
    <td><%= link_to 'Editar', edit_categoria_path(categoria) %></td>
    <td><%= link_to 'Destruir', categoria, confirm: '¿Estás seguro?', method: :delete %></td>
  </tr>
<% end %>
	</tbody>
</table>

	<div class="form-actions">
		<%= link_to 'Nueva categoría', new_categoria_path, :class => 'btn btn-primary' %>		
	</div>

	<script>
		$(document).ready(function() 
		{
		  /* Activating Best In Place */
		  jQuery(".best_in_place").best_in_place();
		});
	</script>

