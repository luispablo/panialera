
	<%= form_for(@producto, :html => {:class => 'form-horizontal'}) do |f| %>
  		<% if @producto.errors.any? %>
  			<div class="row">
  				<div class="span6 offset3">
					<% @producto.errors.full_messages.each do |msg| %>
						<span class="label label-important"><%= msg %></span><br/>
					<% end %>
  				</div>
  			</div>
  			<br/>
  		<% end %>

		<div class="row">
			<div class="span6">
		  		<div class="control-group">
		    		<%= f.label :codigo, :class => 'control-label' %>
		    		<div class="controls"><%= f.text_field :codigo %></div>
		  		</div>
		  		<div class="control-group">
		    		<%= f.label :nombre, :class => 'control-label' %>
		    		<div class="controls"><%= f.text_field :nombre %></div>
		  		</div>
		  		<div class="control-group">
		    		<%= f.label :descripcion, :class => 'control-label' %>
		    		<div class="controls"><%= f.text_field :descripcion %></div>
		  		</div>
		  		<div class="control-group">
		    		<%= f.label :detalle, :class => 'control-label' %>
		    		<div class="controls"><%= f.text_field :detalle %></div>
		  		</div>
			</div>
			<div class="span6">
		  		<div class="control-group">
		    		<%= f.label :precio, :class => 'control-label' %>
		    		<div class="controls"><%= f.text_field :precio %></div>
		  		</div>
		  		<div class="control-group">
		    		<%= f.label :referencia, :class => 'control-label' %>
		    		<div class="controls"><%= f.text_field :referencia %></div>
		  		</div>
		  		<div class="control-group">
		    		<%= f.label :disponible, :class => 'control-label' %>
		    		<div class="controls"><%= f.check_box :disponible %></div>
		  		</div>
		  		<div class="control-group">
		    		<%= f.label :publicado, :class => 'control-label' %>
		    		<div class="controls"><%= f.check_box :publicado %></div>
		  		</div>
			</div>
		</div>
		<div class="row">
			<div class="span12">
		  		<div class="form-actions">
		    		<%= f.submit 'Grabar', :class => 'btn btn-primary' %>
		  		</div>
			</div>
		</div>
	<% end %>
