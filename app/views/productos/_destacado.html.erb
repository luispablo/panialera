
	<div class="span2 well mini-shadow destacado">
		<div class="imagen_destacado">
			<% if destacado.imagen? %>
				<%= image_tag destacado.imagen_url(:thumb) %>
			<% else %>
				<%= image_tag 'thumb.png' %>
			<% end %>
		</div>
		<p><%= destacado.marca.nombre %>&nbsp;<%= destacado.nombre %></p>
		<p><%= number_to_currency(destacado.precio) %></p>

		<p>
			<%= link_to 'Ver Detalles', controller: :tienda, action: :detalle_producto, codigo: destacado.codigo %>
			<%= button_to 'Agregar al carrito', carrito_items_path(producto_id: destacado), remote: true, class: 'btn btn-danger' %>
		</p>				
	</div>
