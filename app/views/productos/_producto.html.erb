
	<div class="well shadow">
		<div class="row">
			<div class="span2">
				<% if producto.imagen? %>
					<%= image_tag producto.imagen_url(:thumb) %>
				<% else %>
					<%= image_tag 'thumb.png' %>
				<% end %>
			</div>
			<div class="span5">
				<div class="row">
					<div class="span3">
						<strong><%= producto.nombre %></strong><br/>
						<em><%= producto.descripcion %></em><br/>
					</div>
					<div class="span2" style="text-align: right;">
						<h3><%= number_to_currency(producto.precio) %></h3><br/>				
					</div>
				</div>
				<div class="row">
					<div class="span3">
						<%= "Talle #{producto.talle}" unless producto.talle.nil? or producto.talle.empty? %> <%= "(#{producto.peso_bebe})" unless producto.peso_bebe.nil? or producto.peso_bebe.empty? %><br/>
						<%= producto.referencia %>
						<br/>
						<%= link_to 'Ver Detalle', controller: :tienda, action: :detalle_producto, codigo: producto.codigo %>
					</div>
					<div class="span2" style="text-align: right">
						<%= button_to texto_boton_carrito(producto), carrito_items_path(producto_id: producto), disabled: !producto.hay_stock?, remote: true, class: 'btn btn-danger' %>
					</div>
				</div>
			</div>
		</div>				
	</div>
