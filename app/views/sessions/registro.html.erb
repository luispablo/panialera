
	<div class="well titulo_naranja">
		<h3>Registrarme</h3>
	</div>
	
	<div class="well shadow">
		<%= form_for(@usuario, url: {controller: :sessions, action: :create_usuario}, html: {class: 'form-horizontal'}) do |f| %>
			<blockquote>Los campos marcados <i class="icon-asterisk"></i> con son obligatorios.</blockquote>
			<div class="control-group">
				<%= f.label :nombre, raw('<i class="icon-asterisk"></i> Nombre'), class: 'control-label' %>
				<div class="controls"><%= f.text_field :nombre %></div>
			</div>
			<div class="control-group">
				<%= f.label :apellido, raw('<i class="icon-asterisk"></i> Apellido'), class: 'control-label' %>
				<div class="controls"><%= f.text_field :apellido %></div>
			</div>
			<div class="control-group">
				<%= f.label :sexo, raw('<i class="icon-asterisk"></i> Sexo'), class: 'control-label' %>
				<div class="controls"><%= f.select :sexo, {'Femenino' => 'F', 'Masculino' => 'M'}, {}, class: 'span2' %></div>
			</div>
			<div class="control-group">
				<%= f.label :email, raw('<i class="icon-asterisk"></i> e-mail'), class: 'control-label' %>
				<div class="controls"><%= f.email_field :email %></div>
			</div>
			<div class="control-group">
				<%= f.label :tel_particular, raw('<i class="icon-asterisk"></i> Tel. Particular'), class: 'control-label' %>
				<div class="controls"><%= f.telephone_field :tel_particular %></div>
			</div>
			<div class="control-group">
				<%= f.label :tel_celular, raw('<i class="icon-asterisk"></i> Tel. Celular'), class: 'control-label' %>
				<div class="controls"><%= f.telephone_field :tel_celular %></div>
			</div>
			<div class="control-group">
				<%= f.label :tel_laboral, 'Tel. Laboral', class: 'control-label' %>
				<div class="controls"><%= f.telephone_field :tel_laboral %></div>
			</div>
			<div class="control-group">
				<%= f.label :password, raw('<i class="icon-asterisk"></i> Contraseña'), :class => 'control-label' %>
				<div class="controls"><%= f.password_field :password, size: 40 %></div>
			</div>
			<div class="control-group">
				<%= f.label :password_confirmation, raw('<i class="icon-asterisk"></i> Confirmar contraseña'), class: 'control-label' %>
				<div class="controls"><%= f.password_field :password_confirmation, size: 40 %></div>
			</div>
			<div class="form-actions">
				<%= f.submit 'Aceptar', class: 'btn btn-primary' %>
			</div>		  		
		<% end %>
	</div>
