
<h4>Domicilios a validar</h4>
<br/>

<table class="table table-striped table-bordered table-condensed">				
	<thead>
		<tr>
			<th>Cliente</th>
			<th>Domicilio</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		<% domicilios.each do |d| %>
			<tr>
				<td><%= d.usuario.nombre %>, <%= d.usuario.apellido %></td>
				<td><%= d.descripcion %></td>
				<td>
					<%= link_to 'Válido <i class="icon-ok icon-white"></i>'.html_safe, {controller: :admin, action: :validar_domicilio, id: d.id}, remote: true, onclick: "block('Enviando mail de confirmación...')", class: 'btn btn-success' %>
					<%= link_to 'Inválido <i class="icon-remove icon-white"></i>'.html_safe, {controller: :admin, action: :invalidar_domicilio, id: d.id}, remote: true, class: 'btn btn-danger' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
