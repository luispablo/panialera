
	<%= form_for(@usuario, :html => {:class => 'form-horizontal'}) do |f| %>
  		<% if @usuario.errors.any? %>
  			<div class="row">
  				<div class="span6 offset3">
					<% @usuario.errors.full_messages.each do |msg| %>
						<span class="label label-important"><%= msg %></span><br/>
					<% end %>
  				</div>
  			</div>
			<br/>
		<% end %>

		<div class="row">
			<div class="span6">
				<div class="control-group">
		    		<%= f.label :nombre, :class => 'control-label' %>
					<div class="controls"><%= f.text_field :nombre %></div>
		  		</div>
				<div class="control-group">
		    		<%= f.label :apellido, :class => 'control-label' %>
					<div class="controls"><%= f.text_field :apellido %></div>
		  		</div>
				<div class="control-group">
		    		<%= f.label :sexo, :class => 'control-label' %>
					<div class="controls"><%= f.text_field :sexo %></div>
		  		</div>
			</div>
			<div class="span6">
				<div class="control-group">
		    		<%= f.label :tel_particular, :class => 'control-label' %>
					<div class="controls"><%= f.text_field :tel_particular %></div>
		  		</div>
				<div class="control-group">
		    		<%= f.label :tel_celular, :class => 'control-label' %>
					<div class="controls"><%= f.text_field :tel_celular %></div>
		  		</div>
		  		<div class="control-group">
		  			<%= f.label :tel_laboral, :class => 'control-label' %>
		  			<div class="controls"><%= f.text_field :tel_laboral %></div>
		  		</div>
				<div class="control-group">
		    		<%= f.label :email, :class => 'control-label' %>
					<div class="controls"><%= f.text_field :email %></div>
		  		</div>
			</div>
		</div>
		<div class="row">
			<div class="span12">
				<div class="form-actions">
					<%= f.submit 'Grabar', :class => 'btn btn-primary' %>
				</div>
			</div>
		</div>
	<% end %>
