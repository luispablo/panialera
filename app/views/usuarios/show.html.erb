<p id="notice"><%= notice %></p>

<p>
  <b>Nombre:</b>
  <%= @usuario.nombre %>
</p>

<p>
  <b>Apellido:</b>
  <%= @usuario.apellido %>
</p>

<p>
  <b>Sexo:</b>
  <%= @usuario.sexo %>
</p>

<p>
  <b>Tel particular:</b>
  <%= @usuario.tel_particular %>
</p>

<p>
  <b>Tel celular:</b>
  <%= @usuario.tel_celular %>
</p>

<p>
	<b>Tel laboral:</b>
	<%= @usuario.tel_laboral%>
</p>

<p>
  <b>Email:</b>
  <%= @usuario.email %>
</p>
<br/>

<legend>Hijos</legend>
<table class="table table-condensed table-bordered">
	<tbody>
		<% @usuario.hijos.each do |h| %>
			<tr>
				<td><%= h.nombre %></td>
				<td><%= h.sexo == 'F'? 'princesa': 'campeón' %></td>
				<td><%= h.usa_paniales?? 'usa pañales': 'ya es grande' %></td>
				<td><%= h.fecha_nacimiento.strftime('%d/%m/%Y') %></td>
			</tr>
		<% end %>
	</tbody>
</table>


<%= link_to 'Editar', edit_usuario_path(@usuario) %> |
<%= link_to 'Volver', usuarios_path %>
