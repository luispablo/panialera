
	<legend>Listando hijos</legend>

	<table class="table table-bordered table-stripped">
		<thead>
			<tr>
				<th>Padre / Madre</th>
				<th>Nombre</th>
				<th>Edad</th>
				<th>Sexo</th>
				<th>Fecha nacimiento</th>
				<th>Usa pañales</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @hijos.each do |hijo| %>
				<tr>
				    <td><%= "#{hijo.usuario.nombre} #{hijo.usuario.apellido}" unless hijo.usuario.nil? %></td>
				    <td><%= hijo.nombre %></td>
				    <td><%= distance_of_time_in_words(hijo.fecha_nacimiento, Date.today) %></td>
				    <td><%= hijo.sexo == 'F' ? 'princesa' : 'campeón' %></td>
				    <td><%= hijo.fecha_nacimiento %></td>
				    <td><i class="icon-<%= hijo.usa_paniales? ? 'ok': 'remove' %>"></i></td>
				    <td><%= link_to 'Ver', hijo %></td>
				    <td><%= link_to 'Editar', edit_hijo_path(hijo) %></td>
				    <td><%= link_to 'Destruir', hijo, confirm: '¿Estás seguro?', method: :delete %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="form-actions">
		<%= link_to 'Nuevo Hijo', new_hijo_path, :class => 'btn btn-primary' %>
	</div>
