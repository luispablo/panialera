
	<legend>Listando domicilios</legend>

	<table class="table table-bordered table-stripped">
		<thead>
			<tr>
				<th>¿V&aacute;lido delivery?</th>
				<th>En uso (sin baja l&oacute;gica)</th>
				<th>Nombre</th>
				<th>Calle</th>
				<th>N&uacute;mero</th>
				<th>Piso</th>
				<th>Depto</th>
				<th>Entre calles</th>
				<th>C&oacute;digo postal</th>
				<th>Barrio</th>
				<th>Usuario</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @domicilios.each do |domicilio| %>
			  <tr>
			  	<td><%= best_in_place domicilio, :valido_delivery, type: :checkbox, collection: ['<i class="icon-remove"></i>'.html_safe, '<i class="icon-ok"></i>'.html_safe] %></td>
					<td><i class="icon-<%= domicilio.deleted_at.nil? ? 'ok' : 'remove' %>"></i></td>
			    <td><%= domicilio.nombre %></td>
			    <td><%= domicilio.calle %></td>
			    <td><%= domicilio.numero %></td>
			    <td><%= domicilio.piso %></td>
			    <td><%= domicilio.depto %></td>
			    <td><%= domicilio.entre_calles %></td>
			    <td><%= domicilio.codigo_postal %></td>
			    <td><%= domicilio.barrio.nombre unless domicilio.barrio.nil? %></td>
			    <td><%= domicilio.usuario.apellido unless domicilio.usuario.nil? %></td>
			    <td><%= link_to 'Ver', domicilio %></td>
			    <td><%= link_to 'Editar', edit_domicilio_path(domicilio) %></td>
			    <td><%= link_to 'Destruir', domicilio, confirm: '¿Estás seguro?', method: :delete %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>

	<div class="form-actions">
		<%= link_to 'Nuevo Domicilio', new_domicilio_path, :class => 'btn btn-primary' %>		
	</div>

