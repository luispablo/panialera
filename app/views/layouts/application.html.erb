<!DOCTYPE html>

<html>
	<head>
		<title>Pa&ntilde;alera Digital</title>
		<link rel="shortcut icon" href="/favicon.ico?v=2" />
		<%= stylesheet_link_tag    "bootstrap", :media => "all" %>
		<%= stylesheet_link_tag    "panialera", :media => "all" %>
		
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>

	</head>

	<body>
		<div id="tira">
		</div>
	
		<div class="container">
			<div class="row">
				<div class="span7">
					<div class="page-header">
						<h1>
							Pa&ntilde;alera <small>Digital</small>
							<%= image_tag('logo_grande.png') %>
						</h1>						
					</div>					
				</div>
				<div class="span7">
					<div class="row">
						<div class="pull-right">
						<!--
							<a>toto</a>&nbsp;<a>tata</a>
							-->
						</div>
					</div>
					<br/>
					<div class="row">
						<div id="busqueda" class="well span4 offset1">
						
							<%= form_tag({controller: :tienda, action: :busqueda}, {class: 'form-horizontal'}) do %>
								<div class="input-append">
									<%= text_field_tag :texto, params[:texto], class: 'span3', placeholder: 'Búsqueda de productos' %><%= submit_tag 'Buscar', class: 'btn btn-danger' %>
								</div>
							<% end %>
						
						</div>
					</div>
				</div>
			</div>
			
				<div class="navbar">
					<div class="navbar-inner">
						<div class="container">
							<ul class="nav">
								<li><%= link_to 'Inicio', tienda_url %></li>
								<li><%= link_to 'Mi Carrito', @carrito %></li>
								<li><%= link_to 'Mi Cuenta', url_for(controller: :mi_cuenta, action: :datos_personales, id: session[:usuario_id]) if usuario_logueado? %></li>
								<li><%= link_to 'Contacto', url_for(controller: :tienda, action: :contacto) %></li>
								<li><%= link_to '¡Registrarme!', url_for(controller: :sessions, action: :registro) unless usuario_logueado? %></li>
								<li><%= link_to '¿Dónde entregamos?', alcance_url %></li>
							</ul>
						</div>
					</div>
				</div>
			
			<!-- Cuerpo principal -->
			<div class="row">
				<!-- Columna izquierda -->
				<div class="span3">
					<%= render partial: 'layouts/panel_categorias', locals: {categorias: @categorias, categoria: @categoria} %>
				</div>
				<!-- Columna central (principal) -->
				<div class="span8">
					<%= render 'layouts/panel_mensajes' %>

					<%= yield %>

					<footer class="footer">
						<p>&copy;2012 Pa&ntilde;alera Digital. Todos los derechos reservados.</p>
					</footer>
				</div>
				<!-- Columna derecha -->
				<div class="span3">
					<!-- Sólo mostrar el carrito lateral cuando no se está editando el carrito -->
					<div class="well" id="carrito">
						<%= render @carrito unless params[:controller] == 'carritos' or params[:controller] == 'ventas' %>
					</div>

					<div class="well" id="mi_cuenta">
						<%= render partial: 'sessions/session' %>
					</div>					
				</div>
			</div>
		</div>

	</body>

</html>
