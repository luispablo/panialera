<!DOCTYPE html>

<html>
	<head>
		<meta name="google-site-verification" content="4kGqwfF7q5XuMganBRKIjI1CDr8Hs3JpLGAIOfJa5ro" />	
		<meta name="google-site-verification" content="w3RdT2ukfTzy2TNJKkKaD2qOdsIIEyfohvqHnELAPQc" />
		<meta name="google-site-verification" content="7Bh50aDk2iOMD1wLi5wctSb2JJv8YLU0UhpOEEgBL1U" />
		<meta name="keywords" content="pañalera,panialera,panalera,pañal,panal,panial,delivery de pañales,pañalera parque,pañalera villa del parque, panialera villa del parque, panalera villa del parque, pañalera devoto,pañalera paternal,panialera parque,panialera devoto,panialera paternal,parque pañal,regalo bebe,niño,oleo,toallitas,perfume,mordillo,chupete,mamadera,tetina,juguete">
		<meta name="description" content="Delivery de productos de uso regular para el cuidado de tu bebé al mejor precio" />
		<meta name="msvalidate.01" content="1D3F689785A24B58AD77E9B9D37CF627" />		
		
		<title>Pa&ntilde;alera Digital</title>
		
		<link rel="shortcut icon" href="/favicon.ico?v=2" />
		<%= stylesheet_link_tag    "bootstrap", :media => "all" %>
		<%= stylesheet_link_tag    "panialera", :media => "all" %>
		
		<%= javascript_include_tag "application" %>
		<%= javascript_include_tag "jquery.blockUI" %>
		<%= csrf_meta_tags %>

		<script type="text/javascript">

			var _gaq = _gaq || []; 
			_gaq.push(['_setAccount', 'UA-33432729-1']); 
			_gaq.push(['_setDomainName', 'pañaleradigital.com.ar']); 
			_gaq.push(['_setAllowLinker', true]); 
			_gaq.push(['_trackPageview']); 

			(function() { 
				var ga = document.createElement('script'); 
				ga.type = 'text/javascript'; ga.async = true; ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js'; 
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();

		</script>
	</head>

	<body>
	
		<!-- facebook -->
		<div id="fb-root"></div>
		<script>(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = "//connect.facebook.net/es_LA/all.js#xfbml=1";
			fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));</script>
		<!-- facebook -->
			
		<div id="tira">
		</div>
	
		<div class="container">
			<div class="row">
				<div class="span7">
					<div class="page-header">
						<h1>
							Pa&ntilde;alera <small>Digital</small>
							<%= image_tag('logo_grande.png') %>
						</h1>						
					</div>					
				</div>
				<div class="span7">
					<div class="row">
						<div class="pull-right">
						<!--
							<a>toto</a>&nbsp;<a>tata</a>
							-->
						</div>
					</div>
					<br/>
					<div class="row">
						<div id="busqueda" class="well span4 offset1">
						
							<%= form_tag({controller: :tienda, action: :busqueda}, {class: 'form-horizontal'}) do %>
								<div class="input-append">
									<%= text_field_tag :texto, params[:texto], class: 'span3', placeholder: 'Búsqueda de productos' %><%= submit_tag 'Buscar', class: 'btn btn-danger' %>
								</div>
							<% end %>
						
						</div>
					</div>
				</div>
			</div>
			
				<div class="navbar">
					<div class="navbar-inner">
						<div class="container">
							<ul class="nav">
								<li><%= link_to 'Inicio', tienda_url %></li>
								<li><%= link_to 'Nosotros', nosotros_url %></li>
								<li><%= link_to 'Servicios', servicios_url %></li>
								<li><%= link_to '¿Dónde entregamos?', alcance_url %></li>
								<li class="ofertas"><%= link_to '¡OFERTAS!', ofertas_url %></li>
								<li><%= link_to 'Contacto', url_for(controller: :tienda, action: :contacto) %></li>
								<li><%= link_to '¡Registrate!', url_for(controller: :sessions, action: :registro) unless usuario_logueado? %></li>
							</ul>
							<ul class="nav pull-right">
								<li class="divider-vertical"></li>
								<li><%= link_to 'Mi Carrito', @carrito %></li>
								<li><%= link_to 'Mi Cuenta', url_for(controller: :mi_cuenta, action: :datos_personales, id: session[:usuario_id]) if usuario_logueado? %></li>
							</ul>
						</div>
					</div>
				</div>
			
			<!-- Cuerpo principal -->
			<div class="row">
				<!-- Columna izquierda -->
				<div class="span3">
					<%= render partial: 'layouts/panel_categorias', locals: {categorias: @categorias, categoria: @categoria} %>
					<br/>
					
					<%= render partial: 'productos/destacado', locals: { destacado: @destacado } %>
				</div>
				<!-- Columna central (principal) -->
				<div class="span8">
					<%= render 'layouts/panel_mensajes' %>

					<%= yield %>

					<footer class="footer">
						<p>&copy;2012 Pa&ntilde;alera Digital. Todos los derechos reservados. - Escribinos: <a href="mailto:panialeradigital@gmail.com" target="_blank">panialeradigital@gmail.com</a></p>
					</footer>
				</div>
				<!-- Columna derecha -->
				<div class="span3">

					<div class="well" id="mi_cuenta">
						<%= render partial: 'sessions/session' %>
					</div>					
					
					<!-- Sólo mostrar el carrito lateral cuando no se está editando el carrito -->
					<% unless params[:controller] == 'carritos' or params[:controller] == 'ventas' %>
						<div class="well" id="carrito">
							<%= render @carrito %>
						</div>
					<% end %>

					<a href="https://twitter.com/PanaleraDigital" class="twitter-follow-button" data-show-count="false" data-lang="es" data-size="large">Seguir a @PanaleraDigital</a>
					<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>				

					<!-- facebook -->
					<div class="fb-like-box" data-href="http://www.facebook.com/panialeradigital" data-width="220" data-height="300" data-show-faces="false" data-stream="false" data-header="false"></div>				</div>				
					
			</div>
		</div>
		
		<script>
			function block(mensaje)
			{ 
    			$.blockUI(
				{ 
    				message: '<h2>'+ mensaje +'</h2>',
    				css: 
    				{ 
				        border: 'none', 
				        padding: '15px', 
				        backgroundColor: '#000', 
				        '-webkit-border-radius': '10px', 
				        '-moz-border-radius': '10px', 
				        opacity: .5, 
				        color: '#fff' 
        			} 
    			});
			}
		</script>

	</body>

</html>
