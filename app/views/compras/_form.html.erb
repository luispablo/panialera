
	<%= form_for(@compra, :html => {:class => 'form-horizontal'}) do |f| %>
  		<% if @compra.errors.any? %>
  			<div class="row">
  				<div class="span6 offset3">
					<% @compra.errors.full_messages.each do |msg| %>
						<span class="label label-important"><%= msg %></span><br/>
					<% end %>
  				</div>
  			</div>
			<br/>
  		<% end %>

  		<div class="control-group">
    		<%= f.label :fecha, :class => 'control-label' %>
    		<div class="controls"><%= f.date_select :fecha, {:include_blank => true}, {:class => 'span1'} %></div>
  		</div>
  		
  		<div class="form-actions">
    		<%= f.submit 'Grabar', :class => 'btn btn-primary' %>
  		</div>
  
	<% end %>
